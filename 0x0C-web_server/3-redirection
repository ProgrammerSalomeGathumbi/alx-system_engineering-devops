#!/usr/bin/env bash  
#Configure your Nginx server so that /redirect_me is redirecting to another page   
apt  -y update
apt -y upgrade
apt -y install nginx
ufw allow 'Nginx HTTP' 
echo "Hello World!" > /var/www/html/index.nginx-debian.html
sed -i 's|server_name\_;|serve_name _;\n\t rewrite ^/redirect_me https://www.youtube.com/watch?v=QH2-TGUlwu4/permanent;' /etc/nginx/sites-available/default
service nginx restart
